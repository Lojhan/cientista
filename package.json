{
  "author": "lojhan",
  "description": "Cientista is a versatile library designed to facilitate the smooth update of critical software paths.",
  "devDependencies": {
    "poku": "^3.0.2",
    "prettier": "3.8.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3"
  },
  "entrypoint": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build/index.js"
    }
  },
  "files": [
    "build"
  ],
  "keywords": [
    "cientista",
    "scientist",
    "science"
  ],
  "license": "MIT",
  "main": "build/index.js",
  "module": "build/index.js",
  "name": "cientista",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lojhan/cientista.git"
  },
  "scripts": {
    "build": "tsc",
    "examples": "tsx examples/index.ts",
    "format": "prettier --write .",
    "start": "tsx index.ts",
    "test": "poku --parallel --include='spec' --exclude='node_modules,build'"
  },
  "type": "module",
  "types": "build/index.d.ts",
  "version": "0.3.0"
}
